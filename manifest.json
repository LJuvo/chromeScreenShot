{
  "name": "截屏工具",
  "version": "1.1",
  "description": "简易截屏、定时截屏工具",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "ScreenPic"
  },
  "permissions": [
    "contextMenus",
    "http://*/*",
    "tabs",
    "<all_urls>",
    "activeTab"
  ],
  "manifest_version": 2
}
